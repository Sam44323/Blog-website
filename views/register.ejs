<%- include("authentication/top") -%>

<form class="form-signin" action="/register" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

    <input type="text" name="fName" id="inputEmail" class="form-control top" placeholder="First Name" required autofocus>
    <input type="text" name="lName" class="form-control middle" placeholder="Last Name" required>
    <input type="email" class="form-control bottom" name="email" placeholder="Email Address" required>
    <div class="checkbox mb-3">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
  </form>

